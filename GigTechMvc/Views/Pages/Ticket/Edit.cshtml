@model GigTech.Shared.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="flexFormWrapper">
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Ticket Id</label>
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="CustomerId" />
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" readonly/>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TicketDate" class="control-label">Ticket Date</label>
                    <input asp-for="TicketDate" class="form-control" readonly/>
                    <span asp-validation-for="TicketDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="TicketTitle" class="control-label">Ticket Title</label>
                <input asp-for="TicketTitle" class="form-control" />
                <span asp-validation-for="TicketTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketContent" class="control-label">Ticket Content</label>
                <input asp-for="TicketContent" class="form-control" />
                <span asp-validation-for="TicketContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
