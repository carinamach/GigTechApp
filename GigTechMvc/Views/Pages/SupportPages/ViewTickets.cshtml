@model IEnumerable<GigTech.Shared.Ticket>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item != null)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @if (item.Status != null)
                        {
                            @Html.DisplayFor(modelItem => item.Status)
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </td>
                    <td>
                        @if (item.Status != null)
                        {
                            @Html.DisplayFor(modelItem => item.TicketContent)
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </td>
                    <td>
                        @if (item.Status != null)
                        {
                            @Html.DisplayFor(modelItem => item.TicketTitle)
                        }
                        else
                        {
                            <text>N/A</text>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TicketDate)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.CustomerId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                    </td>
                </tr>

            }

        }
    </tbody>
</table>
