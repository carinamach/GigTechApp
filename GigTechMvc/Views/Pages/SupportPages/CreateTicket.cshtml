@using Microsoft.AspNetCore.Identity
@model GigTech.Shared.Ticket

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TicketTitle" class="control-label">Title</label>
                <input ID="userTitle" asp-for="TicketTitle" class="form-control" placeholder="Ticket Title" runat="server" ClientIDMode="static"/>
                <span asp-validation-for="TicketTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketContent" class="control-label">Content</label>
                <input asp-for="TicketContent" class="form-control" placeholder="Content"/>
                <span asp-validation-for="TicketContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketDate" class="control-label">Date of Ticket Creation</label>
                <input asp-for="TicketDate" class="form-control" readonly />
                <span asp-validation-for="TicketDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label" >User ID</label>
                <input asp-for="CustomerId" class="form-control" style="bg-white" readonly placeholder="@Model.CustomerId" value="@Model.CustomerId" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
