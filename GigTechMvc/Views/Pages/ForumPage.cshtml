<div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newPostModalLabel">New Forum Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Forum" asp-action="SaveText" method="post">
                    <div class="form-group bg-white col-md-6">
                        <label for="threadId">Select Thread:</label>
                        <select class="form-select form-select-m" style="margin-top: 5px;"  aria-label="Medium select" id="threadId" name="threadId" required>
                            <option selected disabled value="">Choose a category...</option>
                            <option value=1>Test</option>
                            <option value=2>Games</option>
                            <option value=3>News</option>
                        </select>
                        <br/>
                    </div>
                    <div class="form-group bg-white" >
                        <label for="title" class="bg-white">Title:</label>
                        <br />
                        <input id="title" name="title" class="form-control bg-light" style="margin-top: 5px;"  required />
                        <br/>
                    </div>
                    <div class="form-group bg-white">
                        <label for="content" class="bg-white">Content:</label>
                        <br/>
                        <textarea id="content" name="content" class="form-control bg-light" style="margin-top: 5px;" rows="5" required></textarea>
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


