@using GigTech.Shared

@{
    var dbcontext = new GigTechContext();

}
<h1 style="padding-top:100px;">Forum</h1>
<form asp-controller="Forum" asp-action="FilterByCategory" method="get" class="text-center">
    <div class="form-group bg-white">
        <div class="row">
            <div class=>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="1">Test</button>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="2">Games</button>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="3">News</button>
                <button selected type="submit" class="btn btn-secondary btn-lg btn-block col-md-2" name="categoryNumber" value="">Show All</button>
                <br />
                <br />
            </div>
        </div>
    </div>
</form>

<br />
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <div class="container">

                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var post in Model)
                    {
                        <div class="container">
                            <div class="card mb-4">
                                <div class="container card-header">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h3 class="card-title">@post.Title</h3>
                                            <h6>Category: @(post.ThreadId == 1 ? "Test Posts" : post.ThreadId == 2 ? "Game" : "News")</h6>
                                        </div>
                                        <div class="col-md-4 text-right flex-row-reverse">
                                            <p class="card-text text-right">Date & Time: @post.CreationDate</p>
                                            <h6 class="card-subtitle mb-2 text-muted text-right">Posted by customer id: @post.CustomerId</h6>
                                            <div class="align-item d-flex flex-row-reverse">
                                                <form asp-controller="Forum" asp-action="DeletePost" method="post">
                                                    <input type="hidden" name="postId" value="@post.Id" />
                                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                </form>                                            
                                                <button style ="margin-right:5px;" type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#editPostModal_@post.Id">Edit</button>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="card-text">@Html.Raw(post.Content)</p>
                                </div>
                                <div class="card-footer text-muted d-flex justify-content-end" style="padding-right:0;">
                                    <button style="margin-right:5px;" type="button" class="btn btn-md btn-primary" data-toggle="modal" data-target="#replyModal_@post.Id">Reply</button>
                                </div>

                            </div>
                            @{
                                int parentPostId = post.Id;
                                List<ForumThread> replyList;
                                replyList = dbcontext.ForumThreads.Where(item => item.ForumPostId == parentPostId).ToList();
                            }
                            @foreach (var reply in replyList)
                            {
                                <div class="container" style="margin-left:3rem;  padding-right:0; width:auto;">
                                    <div class="card mb-4">                                           
                                        <div class="card-body">
                                            <p class="card-text"><strong>User @reply.UserId replied: </strong>@reply.Content</p>
                                        </div>
                                    </div>
                                </div>
                            }
                            
                        </div>                         
                        <!-- POP-up: Reply Modal -->
                        <div class="modal fade" id="replyModal_@post.Id" tabindex="-1" role="dialog" aria-labelledby="replyModalLabel_@post.Id" aria-hidden="true">
                            <!-- Modal Content -->
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="replyModalLabel_@post.Id">Reply to @post.Title</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <!-- Modal Body -->
                                    <div class="modal-body">
                                        <h6>Title: @post.Title</h6>
                                        <p>@Html.Raw(post.Content)</p>
                                        @foreach (var reply in replyList)
                                        {
                                            <div class="container" style="margin-left:3rem;  padding-right:0; width:auto;">
                                                <div class="card mb-4">
                                                    <div class="card-body">
                                                        <p class="card-text"><strong>User @reply.UserId replied: </strong>@reply.Content</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <form asp-controller="Forum" asp-action="AddReply" method="post">
                                            <input type="hidden" name="postId" value="@post.Id" />
                                            <div class="form-group">
                                                <label for="replyContent_@post.Id"><strong>Your Reply:</strong></label>
                                                <textarea id="replyContent_@post.Id" name="replyContent" class="form-control bg-white" rows="3" required></textarea>
                                                <br />
                                                <button type="submit" class="btn btn-primary">Submit Reply</button>
                                            </div>
                                        </form>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>

                        <!-- POP-up: Edit Post Modal -->
                        <div class="modal fade" id="editPostModal_@post.Id" tabindex="-1" role="dialog" aria-labelledby="editPostModalLabel_@post.Id" aria-hidden="true">
                            <!-- Modal Content -->
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <!-- Modal Header -->
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="editPostModalLabel_@post.Id">Edit Forum Post</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <!-- Modal Body -->
                                    <div class="modal-body">
                                        <!-- Edit Post Form -->
                                        <form asp-controller="Forum" asp-action="EditPost" method="post">
                                            <input type="hidden" name="postId" value="@post.Id" />
                                            <!-- Title -->
                                            <div class="form-group">
                                                <label for="editTitle_@post.Id">Title:</label>
                                                <textarea id="editTitle_@post.Id" name="newTitle" class="form-control bg-white">@post.Title</textarea>
                                            </div>
                                            <!-- Content -->
                                            <div class="form-group">
                                                <label for="editContent_@post.Id">Content:</label>
                                                <textarea id="editContent_@post.Id" name="newContent" class="form-control bg-white" rows="5">@post.Content</textarea>
                                            </div>
                                            <!-- Submit Button -->
                                            <button class="btn btn-primary" type="submit" style="margin-top:5px">Save Edits</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                }
                else
                {
                    <h3>No Post Created Yet</h3>
                }
            </div>

        </div>
        <div class="col-md-2">
            <!-- New Post Button -->
            <div class="mb-4 text-right">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPostModal">
                    Create New Post
                </button>
            </div>
        </div>
    </div>
</div>

@* Pop-up Create Post modal*@
<div class="modal fade" id="newPostModal" tabindex="-1" role="dialog" aria-labelledby="newPostModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newPostModalLabel">New Forum Post</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="Forum" asp-action="CreatPost" method="post">
                    <div class="form-group bg-white col-md-6">
                        <label for="threadId">Select Thread:</label>
                        <select class="form-select form-select-m" style="margin-top: 5px;"  aria-label="Medium select" id="threadId" name="threadId" required>
                            <option selected disabled value="">Choose a category...</option>
                            <option value=1>Test</option>
                            <option value=2>Games</option>
                            <option value=3>News</option>
                        </select>
                        <br/>
                    </div>
                    <div class="form-group bg-white" >
                        <label for="title" class="bg-white">Title:</label>
                        <br />
                        <input id="title" name="title" class="form-control bg-light" style="margin-top: 5px;"  required />
                        <br/>
                    </div>
                    <div class="form-group bg-white">
                        <label for="content" class="bg-white">Content:</label>
                        <br/>
                        <textarea id="content" name="content" class="form-control bg-light" style="margin-top: 5px;" rows="5" required></textarea>
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}