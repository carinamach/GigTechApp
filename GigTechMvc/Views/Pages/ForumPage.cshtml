@using GigTech.Shared

@{
    var dbcontext = new GigTechContext();
}
<form asp-controller="Forum" asp-action="FilterByCategory" method="get" class="text-center">
    <div class="form-group bg-white">
        <div class="row">
            <div class=>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="1">Test</button>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="2">Games</button>
                <button type="submit" class="btn btn-primary btn-lg btn-block col-md-2" name="categoryNumber" value="3">News</button>
                <button type="submit" class="btn btn-secondary btn-lg btn-block col-md-2" name="categoryNumber" value="">Show All</button>
                <br />
                <br />
            </div>
        </div>
    </div>
</form>


<div class="container">
    @if (Model != null && Model.Count > 0)
    {
        @foreach (var post in Model)
        {
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mb-4">
                            <div class="container card-header">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h3 class="card-title">@post.Title</h3>
                                        <div>
                                            @if (post.ThreadId == 1)
                                            {
                                                <h6>Category: Test Post</h6>
                                            }
                                            else if (post.ThreadId == 2)
                                            {
                                                <h6>Category: Game Posts</h6>
                                            }
                                            else
                                            {
                                                <h6>Category: News Post</h6>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-4 text-left">
                                        <p class="card-text">Date & Time: @post.CreationDate</p>
                                        <h6 class="card-subtitle mb-2 text-muted">Posted by customer id: @post.CustomerId</h6>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <p class="card-text">Content: @Html.Raw(post.Content)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h3>No Forum Post Created Yet</h3>
    }
</div>

